{ "comments": {
      // symbol used for single line comment. Remove this entry if your language does not support line comments
      // "lineComment": "//",
      // symbols used for start and end a block comment. Remove this entry if your language does not support block comments
      // "blockComment": [ "/*", "*/" ]
  }
  // symbols considered brackets; i.e. symbols vscode will do depth-coloring and pair-matching to (I think)
, "brackets": 
  [ [ "{", "}" ]
  , [ "[", "]" ]
  , [ "(", ")" ]
  // some unicode brackets
  , [ "⟦", "⟧" ]
  , [ "⟨", "⟩" ]
  , [ "⟪", "⟫" ]
  , [ "⦃", "⦄" ]
  , [ "⦅", "⦆" ]
  , [ "⦇", "⦈" ]
  , [ "【", "】" ]
  , [ "〖", "〗" ]
  , [ "⌜", "⌝" ]
  , [ "⌞", "⌟" ]
  ]
  // symbols that are auto closed when typing
, "autoClosingPairs": 
  [ { "open" : "{", "close": "}" }
  , { "open" : "[", "close": "]" }
  , { "open" : "(", "close": ")" }

  // standard MD plus «»
  , { "open" : "\"", "close": "\"" }
  , { "open" : "'", "close": "'" }
  , { "open" : "`", "close": "`" }
  , { "open" : "```", "close": "```" }
  , { "open" : "«", "close": "»" }

  // ours
  , { "open" : "~~", "close": "~~" }
  , { "open" : "@@", "close": "@@" }
  , { "open" : "%%", "close": "%%" }
  , { "open" : "^^", "close": "^^" }
  , { "open" : "&&", "close": "&&" }

  // unicode brackets
  , { "open" : "⟦", "close" : "⟧"}
  , { "open" : "⟨", "close" : "⟩"}
  , { "open" : "⟪", "close" : "⟫"}
  , { "open" : "⦃", "close" : "⦄"}
  , { "open" : "⦅", "close" : "⦆"}
  , { "open" : "⦇", "close" : "⦈"}
  , { "open" : "【", "close" : "】"}
  , { "open" : "〖", "close" : "〗"}
  , { "open" : "⌜", "close" : "⌝" }
  , { "open" : "⌞", "close" : "⌟" }
  ]
  // symbols that can be used to surround a selection
, "surroundingPairs":
  // brackets
  [ [ "(", ")" ]
  , [ "[", "]" ]
  , [ "{", "}" ]
  // quotes
  , [ "\"", "\"" ]
  , [ "'", "'" ]
  , [ "`", "`" ]
  , [ "«", "»" ]
  , [ "<", ">" ]
  // MD
  , [ "_", "_" ]
  , [ "*", "*" ]
  , [ "~", "~" ]
  , [ "$", "$" ]
  // unicode brackets
  , [ "⟦", "⟧" ]
  , [ "⟨", "⟩" ]
  , [ "⟪", "⟫" ]
  , [ "⦃", "⦄" ]
  , [ "⦅", "⦆" ]
  , [ "⦇", "⦈" ]
  , [ "【", "】" ]
  , [ "〖", "〗" ]
  , [ "⌜", "⌝" ]
  , [ "⌞", "⌟" ]
  // misc, for option value
  , [ "@", "@" ]
  , [ "#", "#" ]
  , [ "%", "%" ]
  , [ "^", "^" ]
  , [ "&", "&" ]
  , [ "+", "+" ]
  , [ "=", "=" ]
  , [ "|", "|" ]

  , [ "!", "!" ]
  , [ "?", "?" ]

  , [ "-", "-" ]
  , [ "–", "–" ] // N dash
  , [ "—", "—" ] // M dash
  , [ "\\", "\\" ]
  , [ "/", "/" ]
  , [ ":", ":" ]
  , [ ";", ";" ]
  ]
}